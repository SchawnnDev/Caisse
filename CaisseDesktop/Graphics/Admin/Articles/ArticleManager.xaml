<Window xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"  x:Class="CaisseDesktop.Graphics.Admin.Articles.ArticleManager"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CaisseDesktop.Graphics.Admin.Articles"
        mc:Ignorable="d"
        Title="ArticleManager" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition MaxHeight="80"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <GroupBox Header="Informations" Grid.Row="0" Grid.Column="0" Margin="5" >

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition></RowDefinition>
                    <RowDefinition></RowDefinition>
                    <RowDefinition></RowDefinition>
                    <RowDefinition></RowDefinition>
                    <RowDefinition></RowDefinition>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition MaxWidth="60"></ColumnDefinition>
                    <ColumnDefinition></ColumnDefinition>
                </Grid.ColumnDefinitions>

                <!-- ### 1 ### -->
                <Label Content="Nom :" DockPanel.Dock="Left" VerticalAlignment="Center" Grid.Row="0" Grid.Column="0"/>
                <TextBox Height="25" Width="Auto" Grid.Row="0" Grid.Column="1"/>
                <!-- ### 2 ### -->
                <Label Content="Type :" DockPanel.Dock="Left" VerticalAlignment="Center" Grid.Row="1" Grid.Column="0"/>
                <ComboBox x:Name="EventBox" SelectedIndex="0" Grid.Row="1" Grid.Column="1" SelectionChanged="Type_OnSelectionChanged">
                    <ComboBoxItem>Tickets</ComboBoxItem>
                    <ComboBoxItem>Alimentation</ComboBoxItem>
                    <ComboBoxItem>Consignes</ComboBoxItem>
                </ComboBox>
                <!-- ### 3 ### -->
                <Label Content="Prix :" DockPanel.Dock="Left" VerticalAlignment="Center" Grid.Row="2" Grid.Column="0"/>
                <TextBox DataObject.Pasting="Number_OnPasting" PreviewTextInput="Price_OnPreviewTextInput" Height="25" Width="Auto" Grid.Row="2" Grid.Column="1"/>
                <!-- ### 4 ### -->
                <TextBlock TextWrapping="WrapWithOverflow" Text="Nb ventes par jour:" DockPanel.Dock="Left" Grid.Row="3" Grid.Column="0" VerticalAlignment="Center"/>
                <TextBox Height="25" Width="Auto" Grid.Row="3" Grid.Column="1"/>
                <!-- ### 5 ### -->
                <Label Content="Actif :" DockPanel.Dock="Left" VerticalAlignment="Center" Grid.Row="4" Grid.Column="0"/>
                <TextBox Height="25" Width="Auto" Grid.Row="4" Grid.Column="1"/>
                <!-- ### 6 ### -->

            </Grid>

        </GroupBox>
        <GroupBox Header="Personnalisation" Grid.Row="0" Grid.Column="1" Margin="5" >
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition MinHeight="150"/>
                    <RowDefinition/>
                    <RowDefinition MaxHeight="15"/>
                    <RowDefinition/>
                    <RowDefinition MaxHeight="10"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>

                <Border BorderBrush="DarkSlateBlue" BorderThickness="2" Grid.ColumnSpan="2" Margin="20">
                    <Image x:Name="ArticleImage"  Source="/CaisseDesktop;component/Resources/Images/ticket.png" Margin="2"/>
                </Border>

                <DockPanel Grid.Column="0" Grid.Row="1" Grid.ColumnSpan="2"  LastChildFill="True" VerticalAlignment="Center">
                    <Button Content="Editer" Click="EditImageFile_OnClick"></Button>
                    <TextBox x:Name="ImagePath" IsReadOnly="True" Margin="4,0,0,0"  TextWrapping="NoWrap"  ScrollViewer.VerticalScrollBarVisibility="Disabled">../Resources/Images/ticket.png</TextBox>
                </DockPanel>

                <Label Content="Choisir une couleur :" Grid.Row="3" Grid.Column="0" VerticalAlignment="Center"></Label>
                <xctk:ColorPicker Grid.Row="3" Grid.Column="1" VerticalAlignment="Center"/>


            </Grid>
        </GroupBox>
        <GroupBox Header="Options" Grid.Row="0" Grid.Column="2" Margin="5" />



    </Grid>
</Window>
