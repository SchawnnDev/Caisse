<Window
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:local="clr-namespace:CaisseDesktop.Graphics.Admin.Days"
    xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit" x:Class="CaisseDesktop.Graphics.Admin.Days.DayManager"
    mc:Ignorable="d"
    Title="Gestion d'un jour" Height="250" Width="400" WindowStartupLocation="CenterOwner">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>
        <DatePicker Text="Début de la journée"  Grid.Row="0" Margin="10"/>
        <DatePicker Text="Fin de la journée" Grid.Row="1" Margin="10"/>
        <Button x:Name="SaveDayButton" Content="Sauvegarder" Grid.Row="2" Margin="10" />

    </Grid>
</Window>