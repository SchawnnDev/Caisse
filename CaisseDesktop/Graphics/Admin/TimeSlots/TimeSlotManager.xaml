<Window x:Class="CaisseDesktop.Graphics.Admin.TimeSlots.TimeSlotManager"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CaisseDesktop.Graphics.Admin.TimeSlots"
        mc:Ignorable="d"
        Title="TimeSlotManager" Height="300" Width="500">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition MaxHeight="10"/>
            <RowDefinition />
            <RowDefinition MaxHeight="30" />
            <RowDefinition MaxHeight="10" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition MaxWidth="20" />
            <ColumnDefinition />
            <ColumnDefinition MaxWidth="20" />
            <ColumnDefinition />
            <ColumnDefinition MaxWidth="20" />
        </Grid.ColumnDefinitions>

        <GroupBox Header="Informations" Grid.Row="1" Grid.Column="1" Margin="5">

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition MaxWidth="60" />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>

                <!-- ### 1 ### -->
                <Label Content="Début :" DockPanel.Dock="Left" VerticalAlignment="Center" Grid.Row="0" Grid.Column="0" />
                <TextBox x:Name="TimeSlotStart" Height="25" Width="Auto" Grid.Row="0" Grid.Column="1" />
                <!-- ### 2 ### -->
                <Label Content="Fin :" DockPanel.Dock="Left" VerticalAlignment="Center" Grid.Row="1" Grid.Column="0" />
                <TextBox x:Name="TimeSlotEnd" Height="25" Width="Auto" Grid.Row="1" Grid.Column="1" />

                <!-- ### 3 ### -->
                <Label Content="Type :" DockPanel.Dock="Left" VerticalAlignment="Center" Grid.Row="2" Grid.Column="0" />
                <ComboBox x:Name="TimeSlotCashier" SelectedIndex="0" Grid.Row="2" Grid.Column="1"
                          SelectionChanged="TimeSlotCashier_OnSelectionChanged">
                    <ComboBoxItem>Caissier n°1</ComboBoxItem>
                    <ComboBoxItem>Caissier n°2</ComboBoxItem>
                    <ComboBoxItem>Caissier n°3</ComboBoxItem>
                </ComboBox>

            </Grid>

        </GroupBox>

        <GroupBox Header="Remplacement" Grid.Row="1" Grid.Column="3" Margin="5">

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition MaxWidth="60" />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>

                <!-- ### 1 ### -->
                <Label Content="Début :" DockPanel.Dock="Left" VerticalAlignment="Center" Grid.Row="0" Grid.Column="0" />
                <TextBox x:Name="TimeSlotSubstituteStart" Height="25" Width="Auto" Grid.Row="0" Grid.Column="1" />
                <!-- ### 2 ### -->
                <Label Content="Fin :" DockPanel.Dock="Left" VerticalAlignment="Center" Grid.Row="1" Grid.Column="0" />
                <TextBox x:Name="TimeSlotSubstituteEnd" Height="25" Width="Auto" Grid.Row="1" Grid.Column="1" />

                <!-- ### 3 ### -->
                <Label Content="Type :" DockPanel.Dock="Left" VerticalAlignment="Center" Grid.Row="2" Grid.Column="0" />
                <ComboBox x:Name="TimeSlotSubstituteCashier" SelectedIndex="0" Grid.Row="2" Grid.Column="1"
                          SelectionChanged="TimeSlotCashier_OnSelectionChanged">
                    <ComboBoxItem>Caissier n°1</ComboBoxItem>
                    <ComboBoxItem>Caissier n°2</ComboBoxItem>
                    <ComboBoxItem>Caissier n°3</ComboBoxItem>
                </ComboBox>

            </Grid>

        </GroupBox>

        <Button Content="Sauvegarder" Grid.Column="1" Grid.ColumnSpan="3" HorizontalAlignment="Center" Grid.Row="2"
                VerticalAlignment="Center" Click="Save_OnClick" />


    </Grid>
</Window>
