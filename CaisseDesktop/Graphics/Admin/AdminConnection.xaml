<Window x:Class="CaisseDesktop.Graphics.Admin.AdminConnection"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CaisseDesktop.Graphics.Admin"
        xmlns:gif="http://wpfanimatedgif.codeplex.com"
        mc:Ignorable="d"
        Title="Connection administrateur" Height="450" Width="800"
        WindowStyle="None" ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen" WindowState="Maximized">
    <Window.Resources>
        <Style TargetType="Button" x:Key="PinPadButton">
            <Setter Property="Background" Value="#FF858585" />
            <Setter Property="BorderBrush" Value="White" />
            <Setter Property="FontSize" Value="20" />
            <Setter Property="FontFamily" Value="Impact" />
            <Setter Property="FontWeight" Value="ExtraBold" />
            <Setter Property="Cursor" Value="Hand"/>
        </Style>


        <Style TargetType="TextBox" x:Key="RoundedTextBox">
            <Setter Property="Padding" Value="7" />
            <Setter Property="Margin" Value="5" />
            <Setter Property="Background" Value="#FF858585" />
            <Setter Property="FontSize" Value="20" />
            <Setter Property="MinHeight" Value="20" />
            <Setter Property="MinWidth" Value="250" />
            <Setter Property="FontWeight" Value="Bold" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type TextBox}">
                        <Border x:Name="border"
                                CornerRadius="10"
                                BorderBrush="White"
                                BorderThickness="2"
                                Background="#FF858585">
                            <ScrollViewer x:Name="PART_ContentHost"
                                          Focusable="false"
                                          HorizontalScrollBarVisibility="Hidden"
                                          VerticalScrollBarVisibility="Hidden" />
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

    </Window.Resources>

    <Grid>
        <Grid.Background>
            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                <GradientStop Color="Black" Offset="0" />
                <GradientStop Color="IndianRed" Offset="1" />
            </LinearGradientBrush>
        </Grid.Background>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="20*" />
            <RowDefinition Height="10*" />
            <RowDefinition Height="20*" />
            <RowDefinition Height="5*"/>
            <RowDefinition Height="45*" />
            <RowDefinition Height="15" MaxHeight="20" />
        </Grid.RowDefinitions>

        <Image x:Name="Logo" Grid.Column="1" Grid.RowSpan="1"
               gif:ImageBehavior.AnimatedSource="../../Resources/Images/logo.gif" />
        <Label Content="Veuillez saisir votre mot de passe :" Grid.Column="1" HorizontalAlignment="Center" Grid.Row="1"
               VerticalAlignment="Center" FontSize="42" FontFamily="Impact" Foreground="White"/>

        <TextBox x:Name="CashierId" Grid.Column="1" Grid.Row="2" TextWrapping="Wrap"
                 Style="{StaticResource RoundedTextBox}" FontFamily="Impact" FontSize="156" TextAlignment="Center" IsReadOnly="True" VerticalAlignment="Center" />

        <Grid Grid.Column="1" Grid.Row="4">
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
            </Grid.RowDefinitions>

            <!-- 1 à 3 -->
            <Button x:Name="One" Grid.Column="0" Grid.Row="0" Content="1" Style="{StaticResource PinPadButton}" Click="PinPadButton_Click" />
            <Button x:Name="Two" Grid.Column="1" Grid.Row="0" Content="2" Style="{StaticResource PinPadButton}" Click="PinPadButton_Click"/>
            <Button x:Name="Three" Grid.Column="2" Grid.Row="0" Content="3" Style="{StaticResource PinPadButton}" Click="PinPadButton_Click" />

            <!-- 4 à 6 -->
            <Button x:Name="Four" Grid.Column="0" Grid.Row="1" Content="4" Style="{StaticResource PinPadButton}" Click="PinPadButton_Click"/>
            <Button x:Name="Five" Grid.Column="1" Grid.Row="1" Content="5" Style="{StaticResource PinPadButton}" Click="PinPadButton_Click"/>
            <Button x:Name="Six" Grid.Column="2" Grid.Row="1" Content="6" Style="{StaticResource PinPadButton}" Click="PinPadButton_Click"/>

            <!-- 7 à 9 -->
            <Button x:Name="Seven" Grid.Column="0" Grid.Row="2" Content="7" Style="{StaticResource PinPadButton}" Click="PinPadButton_Click"/>
            <Button x:Name="Eight" Grid.Column="1" Grid.Row="2" Content="8" Style="{StaticResource PinPadButton}" Click="PinPadButton_Click"/>
            <Button x:Name="Nine" Grid.Column="2" Grid.Row="2" Content="9" Style="{StaticResource PinPadButton}" Click="PinPadButton_Click"/>

            <!-- supprimer 0 valider -->
            <Button Grid.Column="0" Grid.Row="3" Content="← Supprimer" Background="Red" BorderBrush="White"
                        FontSize="20" FontFamily="Impact" FontWeight="ExtraBold" Click="PinPadButton_Click" Cursor="Hand"/>
            <Button Grid.Column="1" Grid.Row="3" Content="⇆" Style="{StaticResource PinPadButton}" Click="Switch_OnClick"/>
            <Button Grid.Column="2" Grid.Row="3" Content="✔ Valider" Background="Green" BorderBrush="White"
                        FontSize="20" FontFamily="Impact" FontWeight="ExtraBold" Click="PinPadButton_Click" Cursor="Hand"/>

        </Grid>


        <Button Grid.Column="0" Grid.Row="0" Content="↩ Retour" Style="{StaticResource PinPadButton}" HorizontalAlignment="Left" VerticalAlignment="Top" Click="Retour_OnClick"></Button>

    </Grid>
</Window>