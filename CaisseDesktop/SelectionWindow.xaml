        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CaisseDesktop"
        mc:Ignorable="d"
        Title="Caisses" Height="450" Width="800"
        WindowStyle="None" ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen">
    <!--WindowState="Maximized"> -->
    <Grid>

        <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">
            <Button Content="Ouvrir administration" HorizontalAlignment="Center"
                    VerticalAlignment="Center" Click="Button_Click" Margin="5" MinHeight="75" />
            <Button Content="Afficher statistiques" HorizontalAlignment="Center"
                    VerticalAlignment="Center" Click="Button_Click_1" Margin="5" MinHeight="75" />
            <Button Content="Se connecter caissier" HorizontalAlignment="Center"
                    VerticalAlignment="Center" Click="ButtonLogin_OnClick" Margin="5" MinHeight="75" />
        </StackPanel>


    </Grid>
</Window>